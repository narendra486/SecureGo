# syntax=docker/dockerfile:1
FROM python:3.11-slim

RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*
RUN git clone https://github.com/stamparm/DSVW.git /opt/dsvw
WORKDIR /opt/dsvw
# Install minimal deps if present; ignore failure if requirements missing.
RUN if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

EXPOSE 65412
ENTRYPOINT ["python", "/opt/dsvw/dsvw.py", "--host", "0.0.0.0", "--port", "65412"]
